<h1>Burgers!</h1>

<div class="container">
  <div class="row">
    <div class="col-sm-4">
      <div class="leftBurgers">
        <ul>
          {{#each burgers}}
          {{!-- {{#unless this.devoured}} --}}
          {{#unless devoured}}
          <li>
            {{!-- <p class="burgerType">{{this.burger_name}}</p> --}}
            <p class="burgerType">{{burger_name}}</p>
            <form action="burgers/updateOne/{{this.id}}?_method=PUT" method="POST">
              {{!-- <input name="devoured" value="false"> --}}
              <button class="devour" type="submit">Devour it</button>
            </form>
          </li>
          {{/unless}}
          {{/each}}
        </ul>
      </div>
    </div>
    <div class="newburger"></div>
    <div class="col-sm-4 text-center">
      <div class="input">
        <h2>Add your burger here!</h2>
        <img src="../assets/images/burger.jpg" alt="burger" class="image">
        <form class="create-form">
          <div class="form-group">
            {{!-- <form method="POST" action="burgers/insertOne" class="addOne text-center"></form> --}}
            <form class="addOne text-center"></form>
            <textarea id="bu" type="text" name="burger_name" rows="2" cols="40"></textarea>
            <button id="addBurger" type="submit">Add Yo' Burger To Eat it or Keep it!</button>
        </form>
        </form>
      </div>
    </div>

    <div class="col-sm-4">
      <div class="rightBurgers">
        <h2 class="heading">Old Favorites</h2>
        <ul>
          {{#each burgers}}
          {{#if this.devoured}}
          <li>
            <p class="burgerType">{{this.burger_name}}</p>
            <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
              <button class="delete" type="submit">Delete it</button>
            </form>
          </li>
          {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
</div>